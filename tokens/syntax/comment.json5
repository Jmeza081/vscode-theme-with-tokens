// Code comments, you can target single, block, and documentation type comments
{
  "tokenColors": {
    "comment": {
      "*": { "value": "{color.font.tertiary.value}" },
      "line": { 
        "value": "{color.font.tertiary.value}",
        "fontStyle": "italic"
      },
      "block": {
        "documentation": { "value": "{color.font.secondary.value}" }
      },
      "single": { "value": "{color.font.tertiary.value}" }
    },
  }
}